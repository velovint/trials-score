<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/eventScoreFragment">

    <fragment
        android:id="@+id/eventScoreFragment"
        android:name="net.yakavenka.trialsscore.LeaderboardFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_leaderboard">
        <action
            android:id="@+id/action_eventScoreFragment_to_pointsEntryFragment"
            app:destination="@id/pointsEntryFragment" />
        <action
            android:id="@+id/action_eventScoreFragment_to_editRiderFragment"
            app:destination="@id/editRiderFragment" />
    </fragment>
    <fragment
        android:id="@+id/pointsEntryFragment"
        android:name="net.yakavenka.trialsscore.PointsEntryFragment"
        android:label="{riderName}"
        tools:layout="@layout/fragment_points_entry">
        <argument
            android:name="riderId"
            app:argType="integer" />
        <action
            android:id="@+id/action_pointsEntryFragment_to_eventScoreFragment"
            app:destination="@id/eventScoreFragment"
            app:popUpTo="@id/eventScoreFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="riderName"
            app:argType="string" />
        <action
            android:id="@+id/action_pointsEntryFragment_to_editRiderFragment"
            app:destination="@id/editRiderFragment" />
        <argument
            android:name="loop"
            app:argType="integer"
            android:defaultValue="1" />
        <action
            android:id="@+id/action_pointsEntryFragment_self"
            app:destination="@id/pointsEntryFragment"
            app:popUpTo="@id/pointsEntryFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/editRiderFragment"
        android:name="net.yakavenka.trialsscore.EditRiderFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_edit_rider">
        <action
            android:id="@+id/action_editRiderFragment_to_eventScoreFragment"
            app:destination="@id/eventScoreFragment"
            app:popUpTo="@id/eventScoreFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="riderId"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="title"
            app:argType="string" />
        <action
            android:id="@+id/action_editRiderFragment_to_pointsEntryFragment"
            app:destination="@id/pointsEntryFragment"
            app:popUpTo="@id/pointsEntryFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/eventSettingsFragment"
        android:name="net.yakavenka.trialsscore.EventSettingsFragment"
        android:label="Edit event settings">
    </fragment>

</navigation>