<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rider_score_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_between_elements"
    android:paddingBottom="@dimen/margin_between_elements">

    <TextView
        android:id="@+id/rider_standing"
        style="@style/Widget.Inventory.ListItemTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rider_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="0.25"
        tools:text="1" />
    <TextView
        android:id="@+id/rider_name"
        style="@style/Widget.Inventory.ListItemTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        app:layout_constraintStart_toEndOf="@id/rider_standing"
        app:layout_constraintEnd_toStartOf="@id/rider_score"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="2"
        tools:text="Champ" />

    <TextView
        android:id="@+id/rider_score"
        style="@style/Widget.Inventory.ListItemTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/lap_score"
        android:layout_columnWeight="1"
        app:layout_constraintStart_toEndOf="@id/rider_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1"
        tools:text="0 / 0" />

</androidx.constraintlayout.widget.ConstraintLayout>